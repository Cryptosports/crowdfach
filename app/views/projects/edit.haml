.row
  .col.s12
    .card
      .card-content
        %h3.center-align= t('.edit')
        = form_for(@project, html: { method: :put, multipart: true }) do |f|
          .row.fix
            .col.s12.m6.input-field
              = f.label :name
              = f.text_field :name, 'data-length': 24
            .col.s12.m6.input-field
              = f.label :category_id, class: 'active'
              = f.select :category_id, Category.all.map { |cat| [cat.name, cat.id] }
          .row.fix
            .col.s12.input-field
              = f.label :description
              = f.text_area :description, required: true, 'data-length': 255, class: 'materialize-textarea'
          .row.fix
            .col.s12.input-field
              = f.label :full_description
              = f.text_area :full_description, required: true, class: 'materialize-textarea'
            .col.s12.input-field.file-field
              .btn.waves-effect.waves-light
                %span= t('.image')
                = f.file_field :avatar
                = f.hidden_field :avatar_cache
              .file-path-wrapper.input-field.fix
                %label{:for => "filename"}= t('.avatar')
                %input.file-path{:type => "text", :id => "filename"}
          .row
            .col.s12
              = f.button t('.save_project'), class: 'full-width waves-effect waves-light btn-large'
