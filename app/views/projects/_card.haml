.col.s12.m6.l4
  .card.sticky-action.hoverable#index
    %a.card-image{:href => project_path(project)}
      .image{:style => "background-image: url('http://sm.ign.com/ign_ru/news/f/fallout-4-/fallout-4-survival-mode-to-enter-beta-on-pc-soon_ktf1.jpg');"}
    .card-content.fade-text
      %span.card-title.activator
        = project.name
        %i.material-icons.right more_vert
      %p
        = project.description
    .card-progress
      .current-progress{:style => "width: " << project.progress << "%;"}
    .card-action.fix
      %ul.fade
        %li
          %b
            = project.balance
            BTC
          = t('project.invested')
        %li
          %b
            = project.progress
            \%
          = t('project.raised')
        %li
          %b 
            78h
          = t('project.remains')
    .card-reveal
      %span.card-title
        = project.name
        %i.material-icons.right close
      %p= project.description
      .author.right-align
        .chip.fade= project.author