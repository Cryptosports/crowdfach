.col.s12.m6.l4
  .card.sticky-action.hoverable#index
    %a.card-image{:href => project_path(project)}
      .image{:style => "background-image: url('" << project.avatar_url.to_s << "');"}
    .card-content.fade-text
      %span.card-title.activator
        = project.name
        %i.material-icons.right more_vert
      %p
        = project.description
    .card-progress
      .current-progress{:style => "width: " << project.limited_progress << ";"}
    .card-action.fix
      %ul.fade
        %li
          %b
            = project.balance.round(3)
            BTC
          = t('project.invested')
        %li
          %b
            = project.progress
          = t('project.raised')
        %li
          - if project.finished
            %b= project.finish_status
          - else
            %b= project.remain
            = t('project.remains')
    .card-reveal
      %span.card-title
        = project.name
        %i.material-icons.right close
      %p= project.description
      .author.right-align
        .chip.fade= project.user.full_name
